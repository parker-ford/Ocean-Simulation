#pragma kernel CSMain

#include "UnityCG.cginc"
#include "../Includes/common.cginc"
#include "../Includes/noise.cginc"

RWTexture2D<float4> height_buffer;
Texture2D<float4> pingpong0;
Texture2D<float4> pingpong1;
float resolution;
int _PingPong;

[numthreads(1,1,1)]
void CSMain (uint3 id : SV_DispatchThreadID)
{
    float perms [] = {1.0, -1.0};
    int index = ((id.x + id.y) % 2);
    float perm = perms[index];

    if(_PingPong == 0){
        float h = pingpong0[id.xy].r;
        float val = perm * (h / (resolution * resolution));
        // float val = h;
        height_buffer[id.xy] = float4(val, 0, 0, 1);
    }
    else{
        float h = pingpong1[id.xy].r;
        float val = perm * (h / (resolution * resolution));
        // float val = h;
        height_buffer[id.xy] = float4(val, 0, 0, 1); 
    }
}
